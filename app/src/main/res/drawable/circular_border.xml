<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <size android:width="48dp" android:height="48dp" /> <!-- Adjust size as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/holo_orange_light" /> <!-- Border color -->
            <size android:width="48dp" android:height="48dp" /> <!-- Match size -->
        </shape>
    </item>
</layer-list>
